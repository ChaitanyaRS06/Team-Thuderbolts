# Database Configuration
DATABASE_URL=postgresql://uva_user:uva_password@db:5432/uva_research_assistant

# Anthropic Configuration (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Local Embedding Model (no API key needed - runs locally)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Tavily Web Search
TAVILY_API_KEY=your_tavily_api_key_here

# Microsoft Graph/OneDrive Configuration (Optional)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id
ONEDRIVE_ROOT_FOLDER=UVA_Research_Assistant

# JWT Authentication
SECRET_KEY=your_secret_key_here_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Application Settings
DEBUG=true
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.4
MAX_RESULTS=5

# LangGraph Settings
MAX_ITERATIONS=3
ENABLE_DETAILED_REASONING=true

# UVA Specific Settings
UVA_BASE_URL=https://virginia.edu
UVA_IT_RESOURCES_URL=https://its.virginia.edu
